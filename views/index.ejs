<!DOCTYPE html>
<html lang="en">

<head>
    <title>Employee Database</title>
    <% include partials/head.ejs %>
</head>

<body>

    <div id="wrapper">

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid" ng-app="myApp" ng-controller="Controller">
                <div class="row">
                    <div class="col-lg-12">

                      <p align="center" class="headingFont">
                        Employee Database - M.E.A.N App by YBBS
                      </p>
                      <br/>


                      <table class="table">
                        <thead>
                          <tr>
                            <td>Name</td>
                            <td>Email</td>
                            <td>Date of Birth</td>
                            <td>Department</td>
                            <td>Gender</td>
                            <td>Age</td>
                          </tr>
                        </thead>

                        <tbody>
                          <tr>

                            <form>
                              <td><input class="form-control" ng-model="employee.name"
                                required placeholder="Name" /></td>
                              <td><input type="email" ng-model="employee.email" required
                                class="form-control" placeholder="abc@xyz.com" /></td>
                              <td><input type="text" ng-model="employee.dob"
                                id="datepicker" class="form-control" required
                                placeholder="DD-MM-YYYY" /></td>
                              <td><select ng-model="employee.dept" required
                                class="form-control" placeholder="Department"><option>IT</option><option>Admin</option><option>Facilities</option><option>HR</option><option>Others</option></select>
                              </td>
                              <td><select ng-model="employee.gender" required
                                class="form-control" placeholder="Gender"><option>Male</option><option>Female</option></select>
                              </td>
                              <td><input type="number" ng-model="employee.age" disabled
                                class="form-control" placeholder="Age" ></input></td>
                              <td>
                                <button class="btn btn-success btn-md" href="/create" ng-click="addEmployee()">Add
                                  Employee</button>
                              <td><button class="btn btn-success btn-md" href="/update"
                                  ng-click="updateEmployee()">Update Employee</button></td>
                              </td>

                            </form>
                          </tr>
                               <tr ng-repeat="employee in employees">
                               <td>{{employee.name}}</td>
                               <td>{{employee.email}}</td>
                               <td>{{employee.dob}}</td>
                               <td>{{employee.dept}}</td>
                               <td>{{employee.gender}}</td>
                               <td>{{employee.age}}</td><td>
                              <button class="btn btn-danger btn-sm" href="/delete"
                                ng-click="removeEmployee(employee.email)">Delete</button></td>
                              <td><button class="btn btn-primary btn-sm" href="/remove"
                                ng-click="editEmployee(employee.email)">Edit</button>
                            </td>

                        </tbody>

                      </table>
                   

                  </div>
           </div>
         </div>
      </div>


  </div>

  <% include partials/jsIncludes.ejs %>

</body>

</html>
