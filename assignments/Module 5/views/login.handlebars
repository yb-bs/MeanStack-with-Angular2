<html>
<head>
{{>head}}
</head>
<body>

 <div class="container">
  <div class="row">
  <br><br><br>
	<h5 align="center" class="margin-base-vertical"><code>{{errorMessage}}</code></h5>
	<form class="margin-base-vertical" method="post" action="/auth">
          <p class="input-group ">
			<span class="input-group-addon"><span class="icon-envelope"></span></span>
			<input type="text" required class="form-control input-lg" name="nm" placeholder="Login Name" />
		  </p>
          <p class="input-group ">
			<span class="input-group-addon"><span class="icon-key"></span></span>
			<input type="password" required class="form-control input-lg" name="pwd" placeholder="Password" />
		  </p>
          <br/>
		  <p class="text-center">
			<button type="submit" class="btn btn-success btn-lg">Get In</button>
		  </p>
	</form>
	<br><br>
	<p class="text-center">
		<a href="/registerForm">Register New User</a>
	</p>
   </div>
 </div>

{{>jsIncludes}}
</body>
</html>